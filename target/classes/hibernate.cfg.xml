<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost/emprestimo
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQL8Dialect
        </property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hbm2ddl.auto">update</property>
        
        <mapping class="com.castilho.paranavai.armario.modelo.Armario" />
        <mapping class="com.castilho.paranavai.armario.modelo.Localizacao" />
        <mapping class="com.castilho.paranavai.armario.modelo.Bibliotecario" />
        <mapping class="com.castilho.paranavai.armario.modelo.Estudante" />
        <mapping class="com.castilho.paranavai.armario.modelo.Pessoa" />
        <mapping class="com.castilho.paranavai.armario.modelo.Reserva" />
    </session-factory>
</hibernate-configuration>